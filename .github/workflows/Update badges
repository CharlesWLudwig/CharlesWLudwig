name: Update badges

on:
  schedule:
    # Runs at 2am UTC
    - cron: "0 2 * * *"
jobs:
  update-readme:
    name: Update Readme.md with badges
    runs-on: ubuntu-latest
    steps:
      - name: Badges - Readme
        uses: CharlesWLudwig/badge-readme@main
        with:       
          CREDLY_USER: <username_credly>
